{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },

  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
